<h1>Views /<%= title %></h1>

<section id="feed-posts">
    <h4>posts</h4>
    <% if (locals.user) { %>
        <form action="/posts/create" id="new-post-form" method="post">
            <textarea name="content" id="" cols="30" rows="4"></textarea>
            <input type="submit" value="post">
        </form>
    <% } %>
    <div class="posts-container">
        <ul>
            <% for(post of posts) { %>
                <li>
                    <p>
                        <%= post.content %>
                        <br>
                        <small>
                            <%= post.user.name %>  
                        </small>
                    </p>
                </li>
            <% } %>
        </ul>
    </div>
</section>
